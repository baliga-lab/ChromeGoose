{
  "name": "Gaggle Chrome Goose",
  "description": "Parse web pages for gaggle data and interact with other Gaggle Geese",
  "version": "1.0",
  "permissions": [
    "storage", "tabs", "http://*/*", "https://*/*"
  ],

  //"content_security_policy": "script-src 'self' https://localhost:8000 https://networks.systemsbiology.net; object-src 'self'",

  "background": {
          "persistent": true,
          "scripts": ["jquery-1.8.2.min.js", "util.js", "message.js", "websocket.js", "background.js"]
      },

  "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["jquery-1.8.2.min.js", "message.js", "util.js", "ufmt.js", "handlers/handler.js",
                "handlers/gaggleMicroformat.js",
                "handlers/david.js", "handlers/kegg.js", "handlers/gaggleXml.js",
                "handlers/gaggleMicroformatHandler.js",
                "handlers/functional-enrichment.js",
                "handlers/webhandler.js",
                "data/gaggle_data.js", "data/namelist.js", "data/datamatrix.js", "data/cluster.js", "gaggle.js"],
        "run_at": "document_idle"
      }
    ],

  //"page_action": {
  //    "default_title": "Gaggle Chrome Goose",
  //        "default_icon": {
  //            "19": "img/icon.png",
  //            "38": "img/icon.png"
  //        },
  //        "default_popup": "page_popup.html"
  //},

  "browser_action": {
      "default_title": "Gaggle Chrome Goose",
      "default_icon": "img/icon.png",
      "default_popup": "browser_popup.html"
  },

  "manifest_version": 2
}
